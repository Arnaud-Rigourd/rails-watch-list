<h1><%= @list.name %></h1>

<div class="list-banner">
  <% if @list.photo.attached? %>
    <%= cl_image_tag(@list.photo.key, alt: "list picture", width: 200) %>
  <% end %>
</div>

<%# @list[0].movies[0].poster_url %>

<% @list.bookmarks.each do |l| %>
  <ul>
    <li><%= image_tag l.movie.poster_url, alt: "movie poster", width: 200 %></li>
    <li><%= l.movie.title %></li>
    <li>Title: <%= l.movie.title %></li>
    <li>Overview: <%= l.movie.overview %></li>
    <li>Comment: <%= l.comment %></li>
    <li><%= link_to "Delete", bookmark_path(l), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></li>
  </ul>
<% end %>

<p><%= render "bookmark_btn" %></p>
<p><%= render "back_btn" %></p>

<% console %>
